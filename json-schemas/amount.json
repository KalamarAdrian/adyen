{
	"$id": "https://github.com/wp-pay-gateways/adyen/blob/master/json-schemas/amount.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Adyen amount.",
	"type": "object",
	"required": [
		"currency",
		"value"
	],
	"properties": {
		"currency": {
			"type": "string",
